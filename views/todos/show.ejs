<%- include('partials/head') %>
<div>
    <div class="container d-flex flex-column align-items-center my-2 p-3">
        <div class="shadow-lg p-3 mb-5 bg-white rounded d-flex flex-column align-items-center">      
            <h1>TASK</h1>
            <p>
                <span class="font-weight-bold"><%= task %></span>
                <div class="btn-group d-flex justify-content-between">
                    <form action="/todos/<%= id %>/edit">
                        <button class="btn btn-primary my-3 d-inline-block mx-3">Edit</button>
                    </form>
                    <form action="/todos/<%= id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger my-3 d-inline-block mx-3">Delete</button>
                    </form>
                </div>
            </p>
            <a href="/todos" class="btn btn-secondary my-3">Main list</a>
        </div>
    </div>      
</div>
<%- include('partials/footer') %>
